@page
@model LoginModel
@{
    ViewData["Title"] = "Најава";
    Layout = null;
}

<!DOCTYPE html>
<html lang="mk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            width: 100%;
        }

        body {
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            overflow-x: hidden;
        }

        /* Главен контејнер */
        .main-wrapper {
            display: flex;
            gap: 40px;
            max-width: 1200px;
            width: 100%;
            align-items: center;
            justify-content: center;
            transition: all 0.9s 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            left: 0;
        }

            /* Поместен контејнер кога се избере улога */
            .main-wrapper.shifted {
                justify-content: flex-start;
                transform: translateX(calc(50% - 600px));
                padding-left: 50px;
            }
        /* Контејнери за најава */
        .login-container {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 50px;
            width: 100%;
            max-width: 450px;
            min-width: 450px;
            transition: all 0.9s 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            flex-shrink: 0;
        }

        /* Формата за најава - почетно скриена */
        #login-form-container {
            opacity: 0;
            transform: scale(0.95);
            pointer-events: none;
            display: none;
        }

            /* Прикажана форма за најава */
            #login-form-container.show {
                opacity: 1;
                transform: scale(1);
                pointer-events: all;
    display: block;
            }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .login-header h1 {
                font-size: 2rem;
                font-weight: 700;
                color: #333;
                margin-bottom: 10px;
            }

            .login-header p {
                color: #666;
                font-size: 1rem;
            }

        .role-btn {
            width: 100%;
            padding: 20px;
            margin-bottom: 15px;
            border: none;
            border-radius: 15px;
            font-size: 1.2rem;
            font-weight: 600;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .role-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.2);
                transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .role-btn:hover::before {
                left: 100%;
            }

            .role-btn:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            }

        .role-btn-student {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .role-btn-professor {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .role-btn-admin {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        /* Блед стил за неселектирани копчиња */
        .role-btn.inactive {
            background: #e0e0e0;
            color: #999;
            opacity: 0.6;
            transform: scale(0.95);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

            .role-btn.inactive:hover {
                transform: scale(0.95);
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            }

        .role-icon {
            font-size: 1.5rem;
            transition: transform 0.3s ease;
        }

        .role-btn:hover .role-icon {
            transform: scale(1.1);
        }

        .back-btn {
            background: none;
            border: none;
            color: #667eea;
            font-size: 1rem;
            padding: 10px 0;
            margin-bottom: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                color: #764ba2;
                gap: 12px;
            }

        .form-floating {
            margin-bottom: 1.5rem;
            position: relative;
        }

            .form-floating input {
                border-radius: 10px;
                border: 2px solid #e0e0e0;
                padding: 15px;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                height: 58px;
                width: 100%;
                font-size: 1rem;
            }

            .form-floating label {
                padding: 1rem 0.75rem;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                color: #666;
            }

            .form-floating input:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
                outline: none;
                transform: translateY(-2px);
            }

                .form-floating input:focus + label {
                    color: #667eea;
                }

        .login-submit-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            color: white;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

            .login-submit-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.2);
                transition: left 0.4s ease;
            }

            .login-submit-btn:hover::before {
                left: 100%;
            }

            .login-submit-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            }

            .login-submit-btn:active {
                transform: translateY(-1px);
            }

        .login-links {
            text-align: center;
            margin-top: 25px;
        }

            .login-links a {
                color: #667eea;
                text-decoration: none;
                margin: 0 10px;
                font-size: 0.95rem;
                transition: all 0.3s ease;
                position: relative;
            }

                .login-links a::after {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background: #764ba2;
                    transition: width 0.3s ease;
                }

                .login-links a:hover::after {
                    width: 100%;
                }

                .login-links a:hover {
                    color: #764ba2;
                }

        .role-title {
            text-align: center;
            color: #333;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 30px;
            transition: all 0.4s ease;
        }

        .fade-in {
            animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .form-check {
            margin-bottom: 1.5rem;
            padding-left: 0;
        }

        .form-check-input {
            cursor: pointer;
            width: 1.2rem;
            height: 1.2rem;
            margin-right: 0.5rem;
            transition: all 0.3s ease;
        }

            .form-check-input:checked {
                background-color: #667eea;
                border-color: #667eea;
            }

        .form-check-label {
            cursor: pointer;
            margin-left: 0.5rem;
        }

        /* Адаптивност за помали екрани */
        @@media (max-width: 1100px) {
            .main-wrapper.shifted {
                transform: translateX(calc(50% - 550px));
                padding-left: 30px;
            }
        }

        @@media (max-width: 1000px) {
            .main-wrapper.shifted {
                transform: translateX(calc(50% - 500px));
            }

            .login-container {
                min-width: 400px;
                max-width: 400px;
            }
        }

        @@media (max-width: 900px) {
            .main-wrapper {
                flex-direction: column;
                gap: 30px;
            }

                .main-wrapper.shifted {
                    transform: none;
                    justify-content: center;
                    padding-left: 0;
                }

            #login-form-container {
                transform: translateY(30px) scale(0.95);
            }

                #login-form-container.show {
                    transform: translateY(0) scale(1);
                }

            .login-container {
                min-width: 100%;
                max-width: 450px;
            }
        }

        @@media (max-width: 480px) {
            body {
                padding: 10px;
            }

            .login-container {
                padding: 30px 20px;
            }

            .login-header h1 {
                font-size: 1.7rem;
            }

            .role-btn {
                padding: 16px;
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <div class="main-wrapper" id="main-wrapper">
        <!-- Избор на улога -->
        <div class="login-container fade-in" id="role-selection">
            <div class="login-header">
                <h1>Добредојдовте</h1>
                <p>Изберете го Вашиот профил</p>
            </div>

            <div>
                <button type="button" class="role-btn role-btn-student" data-role="student" onclick="showLoginForm('Студент', 'student')">
                    <span class="role-icon">🎓</span>
                    <span>Студент</span>
                </button>
                <button type="button" class="role-btn role-btn-professor" data-role="professor" onclick="showLoginForm('Професор', 'professor')">
                    <span class="role-icon">👨‍🏫</span>
                    <span>Професор</span>
                </button>
                <button type="button" class="role-btn role-btn-admin" data-role="admin" onclick="showLoginForm('Администратор', 'admin')">
                    <span class="role-icon">⚙️</span>
                    <span>Администратор</span>
                </button>
            </div>
        </div>

        <!-- Форма за најава -->
        <div class="login-container" id="login-form-container">
            <button type="button" class="back-btn" onclick="backToRoleSelection()">
                <span>←</span>
                <span>Назад</span>
            </button>

            <h2 id="role-title" class="role-title"></h2>

            <form id="account" method="post">
                <input type="hidden" id="selected-role" name="SelectedRole" value="" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">E-mail адреса</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Лозинка</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        Запомни ме
                    </label>
                </div>

                <button id="login-submit" type="submit" class="login-submit-btn">
                    Најави се
                </button>

                <div class="login-links">
                    <a asp-page="./ForgotPassword">Заборавена лозинка?</a>
                    <span>•</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирај се</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function showLoginForm(role, roleKey) {
            const mainWrapper = document.getElementById('main-wrapper');
            const loginFormContainer = document.getElementById('login-form-container');
            const roleButtons = document.querySelectorAll('.role-btn');

            // Помести го контејнерот налево
            mainWrapper.classList.add('shifted');

            // Постави селектирано копче
            roleButtons.forEach(btn => {
                if (btn.getAttribute('data-role') === roleKey) {
                    btn.classList.remove('inactive');
                } else {
                    btn.classList.add('inactive');
                }
            });

            // Прикажи ја формата со анимација
            setTimeout(() => {
                loginFormContainer.classList.add('show');
            }, 50);

            // Постави ги податоците за улогата
            document.getElementById('selected-role').value = roleKey;
            document.getElementById('role-title').textContent = 'Најава како ' + role;
        }

        function backToRoleSelection() {
            const mainWrapper = document.getElementById('main-wrapper');
            const loginFormContainer = document.getElementById('login-form-container');
            const roleButtons = document.querySelectorAll('.role-btn');

            // Сокриј ја формата
            loginFormContainer.classList.remove('show');

            // Почекај малку пред да го вратиш контејнерот назад
            setTimeout(() => {
                mainWrapper.classList.remove('shifted');
            }, 300);

            // Ресетирај ги сите копчиња
            roleButtons.forEach(btn => {
                btn.classList.remove('inactive');
            });

            // Ресетирај ја формата
            document.getElementById('selected-role').value = '';
            document.getElementById('role-title').textContent = '';
            document.getElementById('account').reset();
        }

        // Иницијализација при вчитување
        document.addEventListener('DOMContentLoaded', function() {
            // Сигурно дека формата е скриена на почеток
            document.getElementById('login-form-container').classList.remove('show');
            document.getElementById('main-wrapper').classList.remove('shifted');
        });
    </script>
</body>
</html>