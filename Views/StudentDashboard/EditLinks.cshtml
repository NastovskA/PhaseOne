@model PhaseOne.ViewModels.StudentEditLinksVm

<style>
    .edit-links-container {
        max-width: 650px;
        margin: 1.5rem auto;
        padding: 0 1rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .page-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid transparent;
        border-image: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        border-image-slice: 1;
    }

        .page-header h2 {
            color: #2c3e50;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

            .page-header h2::before {
                content: "📝";
                font-size: 1.5rem;
            }

    .course-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.75rem 1.25rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        box-shadow: 0 3px 10px rgba(102, 126, 234, 0.3);
        margin-bottom: 1.5rem;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 1.75rem;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e9ecef;
    }

    .validation-summary {
        background-color: #f8d7da;
        border: 1px solid #f5c2c7;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        color: #842029;
        margin-bottom: 1.25rem;
        animation: shake 0.4s ease;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        75% {
            transform: translateX(10px);
        }
    }

    .form-section {
        margin-bottom: 1.5rem;
        padding: 1.25rem;
        background: #f8f9fa;
        border-radius: 10px;
        border-left: 3px solid #667eea;
        transition: all 0.3s ease;
    }

        .form-section:hover {
            background: #f1f3f5;
            border-left-color: #764ba2;
        }

    .form-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .current-file-display {
        background: white;
        padding: 0.75rem;
        border-radius: 8px;
        border: 2px dashed #dee2e6;
        margin-top: 0.5rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .current-file-display a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
        }

            .current-file-display a:hover {
                color: #764ba2;
                transform: translateX(3px);
            }

            .current-file-display a::before {
                content: "📄";
                font-size: 1.2rem;
            }

    .no-file {
        color: #6c757d;
        font-style: italic;
    }

    .form-control {
        width: 100%;
        padding: 0.65rem 0.9rem;
        font-size: 0.95rem;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        transition: all 0.3s ease;
        background-color: white;
        margin-top: 0.5rem;
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .form-control:hover {
            border-color: #cbd5e0;
        }

    input[type="file"].form-control {
        padding: 0.5rem;
        cursor: pointer;
    }

        input[type="file"].form-control::file-selector-button {
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            margin-right: 1rem;
            transition: all 0.2s ease;
        }

            input[type="file"].form-control::file-selector-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            }

    .helper-text {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

        .helper-text::before {
            content: "ℹ️";
        }

    .button-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.25rem;
        border-top: 2px solid #e9ecef;
    }

    .btn {
        padding: 0.65rem 1.75rem;
        border: none;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
        }

        .btn-success:active {
            transform: translateY(0);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
        box-shadow: 0 2px 8px rgba(108, 117, 125, 0.3);
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(108, 117, 125, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-secondary:active {
            transform: translateY(0);
        }

    @@media (max-width: 768px) {
        .edit-links-container {
            margin: 1rem auto;
        }

        .form-card {
            padding: 1.5rem;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .button-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-card {
        animation: fadeIn 0.4s ease-out;
    }
</style>

<div class="edit-links-container">
    <div class="page-header">
        <h2>Уреди линкови</h2>
    </div>

    <div class="course-info">
        <strong>@Model.CourseTitle</strong> (@Model.Year)
    </div>

    <div class="form-card">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="EditLinks" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EnrollmentId" />
            <input type="hidden" asp-for="Year" />

            <div class="form-section">
                <label class="form-label">📄 Тековна семинарска датотека</label>
                <div class="current-file-display">
                    @if (!string.IsNullOrWhiteSpace(Model.CurrentSeminalUrl))
                    {
                        <a href="@Model.CurrentSeminalUrl" target="_blank">преглед датотека</a>
                    }
                    else
                    {
                        <span class="no-file">Нема прикачена датотека</span>
                    }
                </div>
            </div>

            <div class="form-section">
                <label class="form-label">📤 Прикачи семинарска</label>
                <input class="form-control" type="file" asp-for="SeminarFile" accept=".doc,.docx,.pdf" />
                <div class="helper-text">Дозволени формати: .doc, .docx, .pdf</div>
            </div>

            <div class="form-section">
                <label class="form-label">🔗 Project URL (GitHub repository)</label>
                <input class="form-control"
                       asp-for="ProjectUrl"
                       type="url"
                       placeholder="https://github.com/username/repository" />
                <div class="helper-text">Внесете линк до вашиот GitHub репозиториум</div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-success">✅ Зачувај промени</button>
                <a asp-action="Index" class="btn btn-secondary">← Назад</a>
            </div>
        </form>
    </div>
</div>