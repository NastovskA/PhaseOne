@model PhaseOne.Models.SeminarWork

<h2>Upload Seminar Work</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>File</label>
        <input type="file" name="file" accept=".doc,.docx,.pdf" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload Seminar Work</button>
</form>

