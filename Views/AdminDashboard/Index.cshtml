@{
    ViewData["Title"] = "Админ Контролна Табла";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📊 Администраторска Контролна Табла</h2>
        <div class="text-muted">
            <small>Последно пристапено: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</small>
        </div>
    </div>

    <div class="row">
        <!-- Курсеви -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-primary h-100 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📚 Курсеви</h5>
                    <span class="badge bg-light text-primary">@(ViewBag.CourseCount ?? "0")</span>
                </div>
                <div class="card-body">
                    <p class="card-text">Управувајте со сите курсеви во системот.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-plus text-success me-2"></i>Додади нов курс</li>
                        <li><i class="fas fa-edit text-warning me-2"></i>Уреди постоечки</li>
                        <li><i class="fas fa-list text-info me-2"></i>Преглед на сите</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-primary w-100">
                        <i class="fas fa-arrow-right me-2"></i>Оди до Курсеви
                    </a>
                </div>
            </div>
        </div>

        <!-- Студенти -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-success h-100 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">👩‍🎓 Студенти</h5>
                    <span class="badge bg-light text-success">@(ViewBag.StudentCount ?? "0")</span>
                </div>
                <div class="card-body">
                    <p class="card-text">Управување со студентски профили и информации.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-user-plus text-success me-2"></i>Додади студент</li>
                        <li><i class="fas fa-user-edit text-warning me-2"></i>Уреди профили</li>
                        <li><i class="fas fa-chart-bar text-info me-2"></i>Статистика</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Students" asp-action="Index" class="btn btn-success w-100">
                        <i class="fas fa-arrow-right me-2"></i>Оди до Студенти
                    </a>
                </div>
            </div>
        </div>

        <!-- Наставници -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-warning h-100 shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">👨‍🏫 Наставници</h5>
                    <span class="badge bg-light text-warning">@(ViewBag.TeacherCount ?? "0")</span>
                </div>
                <div class="card-body">
                    <p class="card-text">Управување со наставнички кадри и доделување.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-chalkboard-teacher text-success me-2"></i>Додади наставник</li>
                        <li><i class="fas fa-tasks text-warning me-2"></i>Додели курсеви</li>
                        <li><i class="fas fa-clock text-info me-2"></i>Распоред</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Teachers" asp-action="Index" class="btn btn-warning w-100">
                        <i class="fas fa-arrow-right me-2"></i>Оди до Наставници
                    </a>
                </div>
            </div>
        </div>

        <!-- Запишувања -->
        @* <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-info h-100 shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📝 Запишувања</h5>
                    <span class="badge bg-light text-info">@(ViewBag.EnrollmentCount ?? "0")</span>
                </div>
                <div class="card-body">
                    <p class="card-text">Управување со запишувања на курсеви.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-file-signature text-success me-2"></i>Ново запишување</li>
                        <li><i class="fas fa-check-circle text-warning me-2"></i>Одобри/Одбиј</li>
                        <li><i class="fas fa-history text-info me-2"></i>Историја</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Enrollments" asp-action="Index" class="btn btn-info w-100">
                        <i class="fas fa-arrow-right me-2"></i>Оди до Запишувања
                    </a>
                </div>
            </div>
        </div> *@
    </div>

    <!-- Дополнителни функционалности -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-secondary shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">⚡ Брзи Акции</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-primary w-100">
                                <i class="fas fa-file-export me-2"></i>Извештаи
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-cog me-2"></i>Подесувања
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-success w-100">
                                <i class="fas fa-users me-2"></i>Корисници
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-warning w-100">
                                <i class="fas fa-bell me-2"></i>Известувања
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS Стилови за дополнително уредување -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .card-header {
        border-bottom: none;
        font-weight: 600;
    }

    .card-footer {
        border-top: 1px solid rgba(0,0,0,0.05);
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.02);
        }

    .list-unstyled li {
        padding: 3px 0;
        font-size: 0.9rem;
    }
</style>

<!-- Додади FontAwesome за икони -->
@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}