@model Course

@{
    ViewData["Title"] = "Детали за курс";
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #2980b9;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --success-color: #27ae60;
        --light-bg: #f8f9fa;
        --card-shadow: 0 3px 8px rgba(0, 0, 0, 0.06);
        --hover-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    }

    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 13px;
    }

    /* CONTAINER */
    .details-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 12px;
    }

    /* HEADER */
    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
        color: white;
        padding: 18px 22px;
        border-radius: 10px;
        margin-bottom: 22px;
        box-shadow: var(--card-shadow);
    }

        .page-header h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 6px;
        }

        .page-header h4 {
            font-size: 0.95rem;
            opacity: 0.9;
            font-weight: 400;
        }

    /* CARD LAYOUT */
    .card {
        background: white;
        border-radius: 10px;
        padding: 22px;
        box-shadow: var(--card-shadow);
        margin-bottom: 18px;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
        padding-bottom: 12px;
        border-bottom: 1px solid #eee;
    }

    .card-icon {
        background: var(--secondary-color);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .card-title {
        color: var(--primary-color);
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0;
    }

    /* COURSE DETAILS */
    .course-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
        margin-bottom: 22px;
    }

    .detail-item {
        padding: 16px;
        background: #f8fafc;
        border-radius: 8px;
        border-left: 3px solid var(--secondary-color);
        transition: transform 0.2s;
    }

        .detail-item:hover {
            transform: translateY(-1px);
            box-shadow: var(--hover-shadow);
        }

    .detail-label {
        font-size: 0.75rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        font-weight: 600;
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .detail-value {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--primary-color);
        line-height: 1.3;
    }

    .detail-value-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 14px;
        font-weight: 600;
        margin-top: 4px;
        font-size: 0.85rem;
    }

    .credits-badge {
        background: var(--danger-color);
        color: white;
    }

    .semester-badge {
        background: var(--secondary-color);
        color: white;
    }

    .programme-badge {
        background: var(--success-color);
        color: white;
    }

    /* TEACHERS SECTION */
    .teachers-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 16px;
        margin-top: 16px;
    }

    .teacher-card {
        background: white;
        border-radius: 8px;
        padding: 16px;
        box-shadow: var(--card-shadow);
        border-top: 3px solid var(--warning-color);
    }

        .teacher-card h5 {
            color: var(--primary-color);
            margin-bottom: 10px;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .teacher-info {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .teacher-name {
        font-size: 1rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .teacher-role {
        font-size: 0.8rem;
        color: #666;
        font-style: italic;
    }

    /* BUTTONS */
    .button-group {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 22px;
        padding-top: 16px;
        border-top: 1px solid #eee;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border: none;
    }

    .btn-primary {
        background: var(--secondary-color);
        color: white;
    }

        .btn-primary:hover {
            background: var(--accent-color);
            transform: translateY(-1px);
            box-shadow: var(--hover-shadow);
            color: white;
        }

    .btn-warning {
        background: var(--warning-color);
        color: white;
    }

        .btn-warning:hover {
            background: #e67e22;
            transform: translateY(-1px);
            box-shadow: var(--hover-shadow);
            color: white;
        }

    .btn-danger {
        background: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background: #c0392b;
            transform: translateY(-1px);
            box-shadow: var(--hover-shadow);
            color: white;
        }

    .btn-secondary {
        background: #95a5a6;
        color: white;
    }

        .btn-secondary:hover {
            background: #7f8c8d;
            transform: translateY(-1px);
            box-shadow: var(--hover-shadow);
            color: white;
        }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.75rem;
        gap: 4px;
    }

    /* ENROLLMENTS SECTION */
    .enrollments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
        flex-wrap: wrap;
        gap: 12px;
    }

    .enrollments-count {
        background: var(--secondary-color);
        color: white;
        padding: 6px 14px;
        border-radius: 16px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .enrollments-count-badge {
        background: var(--danger-color);
        color: white;
        padding: 3px 6px;
        border-radius: 10px;
        font-size: 0.75rem;
        margin-left: 6px;
    }

    /* TABLE STYLES */
    .table-container {
        overflow-x: auto;
        border-radius: 8px;
        box-shadow: var(--card-shadow);
        font-size: 0.85rem;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-size: 0.85rem;
    }

        .table thead {
            background: var(--primary-color);
        }

            .table thead th {
                color: white;
                font-weight: 600;
                padding: 12px 14px;
                text-align: left;
                font-size: 0.8rem;
            }

        .table tbody tr {
            border-bottom: 1px solid #eee;
            transition: background-color 0.2s;
        }

            .table tbody tr:hover {
                background-color: rgba(52, 152, 219, 0.05);
            }

        .table tbody td {
            padding: 12px 14px;
            color: #333;
            font-size: 0.85rem;
        }

    .student-name {
        font-weight: 600;
        color: var(--primary-color);
        font-size: 0.9rem;
    }

    .grade-badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.8rem;
        min-width: 35px;
        text-align: center;
    }

    .grade-A {
        background: #27ae60;
        color: white;
    }

    .grade-B {
        background: #3498db;
        color: white;
    }

    .grade-C {
        background: #f39c12;
        color: white;
    }

    .grade-D {
        background: #e67e22;
        color: white;
    }

    .grade-F {
        background: #e74c3c;
        color: white;
    }

    .grade-null {
        background: #95a5a6;
        color: white;
    }

    /* ADMIN ACTIONS */
    .admin-actions {
        background: #fff8e1;
        border-radius: 8px;
        padding: 16px;
        margin-top: 20px;
        border-left: 3px solid var(--warning-color);
    }

        .admin-actions h5 {
            color: var(--warning-color);
            margin-bottom: 12px;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .admin-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .details-container {
            padding: 10px;
        }

        .page-header {
            padding: 14px 16px;
            text-align: center;
        }

            .page-header h1 {
                font-size: 1.3rem;
            }

        .card {
            padding: 16px;
        }

        .course-details-grid {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .detail-item {
            padding: 14px;
        }

        .teachers-section {
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .teacher-card {
            padding: 14px;
        }

        .button-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .admin-buttons {
            flex-direction: column;
        }

        .enrollments-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .table thead th,
        .table tbody td {
            padding: 10px 12px;
        }
    }

    @@media (max-width: 480px) {
        body {
            font-size: 12px;
        }

        .page-header h1 {
            font-size: 1.1rem;
        }

        .card-icon {
            width: 35px;
            height: 35px;
            font-size: 1rem;
        }

        .card-title {
            font-size: 1.1rem;
        }

        .detail-label {
            font-size: 0.7rem;
        }

        .detail-value {
            font-size: 0.9rem;
        }

        .btn {
            padding: 7px 14px;
            font-size: 0.8rem;
        }
    }

    /* ANIMATIONS */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header, .card {
        animation: fadeIn 0.2s ease-out;
    }

    /* NO DATA */
    .no-data {
        text-align: center;
        padding: 30px 16px;
        color: #666;
        font-size: 0.9rem;
    }

    .no-data-icon {
        font-size: 2.2rem;
        color: #bdc3c7;
        margin-bottom: 12px;
    }

    .no-data h4 {
        font-size: 1rem;
        margin-bottom: 8px;
    }
</style>

<div class="details-container">
    <!-- HEADER -->
    <div class="page-header">
        <h1>📖 Детали за курс</h1>
        <h4>Целосни информации за курсот</h4>
    </div>

    <!-- COURSE DETAILS CARD -->
    <div class="card">
        <div class="card-header">
            <div class="card-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <h2 class="card-title">@Model.Title</h2>
        </div>

        <!-- COURSE DETAILS -->
        <div class="course-details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-heading"></i> Наслов
                </div>
                <div class="detail-value">@Model.Title</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-star"></i> Кредити
                </div>
                <div class="detail-value">
                    <span class="detail-value-badge credits-badge">@Model.Credits ECTS</span>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-alt"></i> Семестар
                </div>
                <div class="detail-value">
                    <span class="detail-value-badge semester-badge">
                        @Model.Semester - @(Model.Semester % 2 == 1 ? "Зимски" : "Летен")
                    </span>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-graduation-cap"></i> Програма
                </div>
                <div class="detail-value">
                    <span class="detail-value-badge programme-badge">@Model.Programme</span>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-university"></i> Степен на студии
                </div>
                <div class="detail-value">@Model.EducationLevel</div>
            </div>
        </div>

        <!-- TEACHERS SECTION -->
        <div class="teachers-section">
            <div class="teacher-card">
                <h5><i class="fas fa-user-tie"></i> Прв наставник</h5>
                @if (Model.FirstTeacher != null)
                {
                    <div class="teacher-info">
                        <div class="teacher-name">@Model.FirstTeacher.FirstName @Model.FirstTeacher.LastName</div>
                        <div class="teacher-role">Главен наставник</div>
                    </div>
                }
                else
                {
                    <div class="no-data">
                        <i class="fas fa-user-slash"></i>
                        <p>Не е доделен наставник</p>
                    </div>
                }
            </div>

            <div class="teacher-card">
                <h5><i class="fas fa-user-graduate"></i> Втор наставник</h5>
                @if (Model.SecondTeacher != null)
                {
                    <div class="teacher-info">
                        <div class="teacher-name">@Model.SecondTeacher.FirstName @Model.SecondTeacher.LastName</div>
                        <div class="teacher-role">Втор наставник / Асистент</div>
                    </div>
                }
                else
                {
                    <div class="no-data">
                        <i class="fas fa-user-slash"></i>
                        <p>Не е доделен наставник</p>
                    </div>
                }
            </div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="button-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Уреди курс
            </a>

            @* <a asp-action="EditEnrollments" asp-route-courseId="@Model.Id" class="btn btn-warning">
                <i class="fas fa-users"></i> Менаџирај запишувања
            </a> *@

            <a asp-action="AdminEditEnrollments" asp-route-courseId="@Model.Id" class="btn btn-danger btn-sm">
                <i class="fas fa-user-plus"></i> Admin: Запиши (Година/Семестар)
            </a>

            <a asp-action="AdminDeactivateEnrollments"
               asp-route-courseId="@Model.Id"
               asp-route-year="@DateTime.Now.Year"
               asp-route-semester="Winter"
               class="btn btn-secondary btn-sm">
                <i class="fas fa-user-minus"></i> Admin: Деактивирај (оваа година Зимски)
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад кон листата
            </a>
        </div>

        @* <!-- ADMIN ACTIONS -->
        @if (User.IsInRole("Admin"))
        {
            <div class="admin-actions">
                <h5><i class="fas fa-shield-alt"></i> Административни акции</h5>
                <div class="admin-buttons">
                    <a asp-action="AdminEditEnrollments" asp-route-courseId="@Model.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-plus"></i> Admin: Запиши (Година/Семестар)
                    </a>

                    <a asp-action="AdminDeactivateEnrollments"
                       asp-route-courseId="@Model.Id"
                       asp-route-year="@DateTime.Now.Year"
                       asp-route-semester="Winter"
                       class="btn btn-secondary btn-sm">
                        <i class="fas fa-user-minus"></i> Admin: Деактивирај (оваа година Зимски)
                    </a>
                </div>
            </div>
        } *@
    </div>

    <!-- ENROLLMENTS CARD -->
    <div class="card">
        <div class="card-header">
            <div class="card-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="enrollments-header">
                <h2 class="card-title">Запишани студенти</h2>
                <div class="enrollments-count">
                    Вкупно запишувања:
                    <span class="enrollments-count-badge">@(Model.Enrollments?.Count ?? 0)</span>
                </div>
            </div>
        </div>

        @if (Model.Enrollments?.Any() == true)
        {
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user"></i> Студент</th>
                            <th><i class="fas fa-chart-line"></i> Оцена</th>
                            <th><i class="fas fa-cogs"></i> Акции</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            var gradeClass = "grade-null";
                            if (enrollment.Grade != null)
                            {
                                var gradeChar = enrollment.Grade.ToString().ToUpper().FirstOrDefault();
                                gradeClass = $"grade-{gradeChar}";
                            }

                            <tr>
                                <td>
                                    <div class="student-name">
                                        @enrollment.Student.FirstName @enrollment.Student.LastName
                                    </div>
                                </td>
                                <td>
                                    <span class="grade-badge @gradeClass">
                                        @(enrollment.Grade?.ToString() ?? "Без оценка")
                                    </span>
                                </td>
                                <td>
                                    <a asp-controller="Enrollments"
                                       asp-action="EditEnrollmentDetails"
                                       asp-route-id="@enrollment.Id"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Уреди детали
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-data">
                <div class="no-data-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h4>Нема запишани студенти</h4>
                <p>Сеуште нема студенти запишани на овој курс.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- FontAwesome за икони -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}