@model IEnumerable<Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="border p-3 bg-light mb-4">
    <div class="row">
        <div class="col-md-3">
            <label class="control-label">Наслов</label>
            <input type="text" name="title" class="form-control" value="@Context.Request.Query["title"]" />
        </div>
        <div class="col-md-2">
            <label class="control-label">Семестар</label>
            <input type="number" name="semester" class="form-control" value="@Context.Request.Query["semester"]" />
        </div>
        <div class="col-md-3">
            <label class="control-label">Програма</label>
            <input type="text" name="programme" class="form-control" value="@Context.Request.Query["programme"]" />
        </div>
        <div class="col-md-3">
            <label class="control-label">Наставник</label>
            <select name="teacherId" class="form-control" asp-items="ViewBag.TeacherId">
                <option value="">-- Сите наставници --</option>
            </select>
        </div>
        <div class="col-md-1 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Најди</button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstTeacher.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondTeacher.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
