@model Course

@{
    ViewData["Title"] = "Уреди курс";
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #2980b9;
        --success-color: #27ae60;
        --light-bg: #f8f9fa;
        --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        --hover-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }

    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* HEADER */
    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: var(--card-shadow);
    }

        .page-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .page-header h4 {
            font-size: 1.1rem;
            opacity: 0.9;
            font-weight: 400;
        }

    /* FORM CARD */
    .form-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: var(--card-shadow);
        margin-bottom: 25px;
    }

    /* FORM STYLES */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
    }

    .form-control, .form-select {
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 0.95rem;
        transition: all 0.2s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            outline: none;
        }

        .form-control:hover, .form-select:hover {
            border-color: #bbb;
        }

    /* VALIDATION */
    .text-danger {
        color: #e74c3c;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .field-validation-error {
        color: #e74c3c;
        font-size: 0.85rem;
    }

    .input-validation-error {
        border-color: #e74c3c;
        background-color: #fff8f8;
    }

    /* BUTTONS */
    .btn-submit {
        background: var(--success-color);
        color: white;
        border: none;
        border-radius: 6px;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-submit:hover {
            background: #219653;
            transform: translateY(-2px);
            box-shadow: var(--hover-shadow);
            text-decoration: none;
            color: white;
        }

        .btn-submit i {
            font-size: 0.9rem;
        }

    .btn-back {
        background: #95a5a6;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-back:hover {
            background: #7f8c8d;
            transform: translateY(-2px);
            box-shadow: var(--hover-shadow);
            color: white;
            text-decoration: none;
        }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 25px;
        flex-wrap: wrap;
    }

    /* FORM LAYOUT */
    .form-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    /* ICONS */
    .form-icon {
        color: var(--secondary-color);
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    .form-header-icon {
        background: var(--secondary-color);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    /* SELECT OPTIONS */
    .form-select option {
        padding: 10px;
    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .edit-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
            text-align: center;
        }

        .form-card {
            padding: 20px;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .button-group {
            flex-direction: column;
        }

        .btn-submit, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }

    /* ANIMATIONS */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header, .form-card {
        animation: fadeIn 0.3s ease-out;
    }

    .form-card {
        animation-delay: 0.1s;
    }

    /* HELPER TEXT */
    .form-helper {
        font-size: 0.85rem;
        color: #666;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="edit-container">
    <!-- HEADER -->
    <div class="page-header">
        <h1>✏️ Уреди курс</h1>
        <h4>Промени ги податоците за курсот</h4>
    </div>

    <!-- FORM -->
    <div class="form-card">
        <div class="form-header-icon">
            <i class="fas fa-book"></i>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Title" class="form-label">
                        <i class="fas fa-heading form-icon"></i>Наслов на курс
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Внесете наслов на курсот" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <span class="form-helper">Целосен наслов на курсот</span>
                </div>

                <div class="form-group">
                    <label asp-for="Credits" class="form-label">
                        <i class="fas fa-star form-icon"></i>Кредити
                    </label>
                    <input asp-for="Credits" class="form-control" placeholder="Број на кредити" />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                    <span class="form-helper">Број на ECTS кредити</span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Semester" class="form-label">
                        <i class="fas fa-calendar-alt form-icon"></i>Семестар
                    </label>
                    <input asp-for="Semester" class="form-control" placeholder="1-8" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                    <span class="form-helper">Семестар (1-8)</span>
                </div>

                <div class="form-group">
                    <label asp-for="Programme" class="form-label">
                        <i class="fas fa-graduation-cap form-icon"></i>Програма
                    </label>
                    <input asp-for="Programme" class="form-control" placeholder="Име на програма" />
                    <span asp-validation-for="Programme" class="text-danger"></span>
                    <span class="form-helper">Назив на студиска програма</span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="EducationLevel" class="form-label">
                        <i class="fas fa-university form-icon"></i>Степен
                    </label>
                    <input asp-for="EducationLevel" class="form-control" placeholder="Степен на студии" />
                    <span asp-validation-for="EducationLevel" class="text-danger"></span>
                    <span class="form-helper">Пример: Додипломски, Магистерски</span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstTeacherId" class="form-label">
                        <i class="fas fa-user-tie form-icon"></i>Прв наставник
                    </label>
                    <select asp-for="FirstTeacherId" class="form-select" asp-items="ViewBag.FirstTeacherId">
                        <option value="">-- Изберете наставник --</option>
                    </select>
                    <span asp-validation-for="FirstTeacherId" class="text-danger"></span>
                    <span class="form-helper">Главен наставник на курсот</span>
                </div>

                <div class="form-group">
                    <label asp-for="SecondTeacherId" class="form-label">
                        <i class="fas fa-user-graduate form-icon"></i>Втор наставник
                    </label>
                    <select asp-for="SecondTeacherId" class="form-select" asp-items="ViewBag.SecondTeacherId">
                        <option value="">-- Изберете наставник (опционално) --</option>
                    </select>
                    <span asp-validation-for="SecondTeacherId" class="text-danger"></span>
                    <span class="form-helper">Асистент/втор наставник (не е задолжително)</span>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Зачувај промени
                </button>
                <a asp-action="Index" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Назад кон листата
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- FontAwesome за икони -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Дополнителни скрипти за подобро искуство -->
    <script>
        // Focus на првото поле при вчитување
        document.addEventListener('DOMContentLoaded', function() {
            const firstInput = document.querySelector('input[type="text"], input[type="number"]');
            if (firstInput) {
                firstInput.focus();
            }

            // Анимација за грешки
            const errorElements = document.querySelectorAll('.text-danger');
            errorElements.forEach(el => {
                el.style.animation = 'fadeIn 0.3s ease-out';
            });
        });
    </script>
}