@model Course

@{
    ViewData["Title"] = "Креирај курс";
}

<style>
    body {
        background-color: #f9fafb;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .create-container {
        max-width: 720px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* HEADER */
    .page-header {
        background: #fff;
        padding: 1.5rem 2rem;
        border-radius: 8px 8px 0 0;
        border-bottom: 1px solid #e5e7eb;
    }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.25rem;
        }

        .page-header h4 {
            font-size: 0.9rem;
            color: #6b7280;
            font-weight: 400;
        }

    /* FORM CARD */
    .form-card {
        background: #fff;
        border-radius: 0 0 8px 8px;
        padding: 2rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    /* FORM STYLES */
    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 0.625rem 0.875rem;
        font-size: 0.95rem;
        color: #1f2937;
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        transition: border-color 0.15s ease, box-shadow 0.15s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59,130,246,0.15);
            outline: none;
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-row-full {
        margin-bottom: 1.25rem;
    }

    /* VALIDATION */
    .text-danger {
        color: #dc2626;
        font-size: 0.8rem;
        margin-top: 0.25rem;
    }

    .validation-summary-errors {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        border-left: 3px solid #dc2626;
        padding: 0.875rem;
        border-radius: 6px;
        margin-bottom: 1.25rem;
    }

        .validation-summary-errors li {
            color: #991b1b;
            font-size: 0.8rem;
        }

    /* BUTTONS */
    .button-group {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.75rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
    }

    .btn-submit {
        flex: 1;
        background-color: #10b981;
        color: #fff;
        border: none;
        padding: 0.625rem 1.25rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .btn-submit:hover {
            background-color: #059669;
        }

    .btn-back {
        flex: 1;
        background: #fff;
        color: #6b7280;
        border: 1px solid #d1d5db;
        padding: 0.625rem 1.25rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s ease;
    }

        .btn-back:hover {
            background-color: #f9fafb;
            border-color: #9ca3af;
            color: #374151;
        }

    /* RESPONSIVE */
    @@media (max-width: 640px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .button-group {
            flex-direction: column;
        }
    }
</style>

<div class="create-container">
    <!-- HEADER -->
    <div class="page-header">
        <h1>Креирај курс</h1>
        <h4>Внеси ги деталите за нов курс</h4>
    </div>

    <!-- FORM -->
    <div class="form-card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Title" class="form-label">Наслов на курс</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Credits" class="form-label">Кредити</label>
                    <input asp-for="Credits" class="form-control" type="number" />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Semester" class="form-label">Семестар</label>
                    <input asp-for="Semester" class="form-control" type="number" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Programme" class="form-label">Програма</label>
                    <input asp-for="Programme" class="form-control" />
                    <span asp-validation-for="Programme" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row-full">
                <div class="form-group">
                    <label asp-for="EducationLevel" class="form-label">Степен на студии</label>
                    <input asp-for="EducationLevel" class="form-control" />
                    <span asp-validation-for="EducationLevel" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstTeacherId" class="form-label">Прв наставник</label>
                    <select asp-for="FirstTeacherId" class="form-select" asp-items="ViewBag.FirstTeacherId">
                        <option value="">Изберете наставник</option>
                    </select>
                    <span asp-validation-for="FirstTeacherId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SecondTeacherId" class="form-label">Втор наставник (опционално)</label>
                    <select asp-for="SecondTeacherId" class="form-select" asp-items="ViewBag.SecondTeacherId">
                        <option value="">Изберете наставник</option>
                    </select>
                    <span asp-validation-for="SecondTeacherId" class="text-danger"></span>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Креирај</button>
                <a asp-action="Index" class="btn-back">Назад кон листата</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
