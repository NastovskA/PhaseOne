<!--  Додадено: Upload форма за профилна слика -->
<div class="mt-3">
    <h4>Profile Image</h4>

    <form asp-action="UploadProfileImage" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="file" name="imageFile" accept="image/*" class="form-control mb-2" />
        <button type="submit" class="btn btn-primary">Upload Image</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
    {
        <div class="mt-2">
            <img src="@Model.ProfileImagePath" alt="Profile Image" class="img-thumbnail" style="max-width:150px;" />
        </div>
    }
</div>


