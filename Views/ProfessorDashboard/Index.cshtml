@model List<PhaseOne.Models.Course>
@{
    ViewData["Title"] = "Мои предмети";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-book me-2"></i>Мои предмети
        </h2>
        <span class="badge bg-primary fs-6">@Model.Count() предмети</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info border-0 shadow-sm">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle fs-4 me-3"></i>
                <div>
                    <h5 class="mb-1">Немате доделени предмети</h5>
                    <p class="mb-0 text-muted">Предметите ќе се појават овде откако ќе ви бидат доделени.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 py-3">
                                <i class="bi bi-journal-text me-2"></i>Предмет
                            </th>
                            <th class="border-0 py-3">
                                <i class="bi bi-award me-2"></i>Кредити
                            </th>
                            <th class="border-0 py-3">
                                <i class="bi bi-calendar3 me-2"></i>Семестар
                            </th>
                            <th class="border-0 py-3">
                                <i class="bi bi-mortarboard me-2"></i>Програма
                            </th>
                            <th class="border-0 py-3">
                                <i class="bi bi-graph-up me-2"></i>Ниво
                            </th>
                            <th class="border-0 py-3 text-center">Акции</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <strong>@c.Title</strong>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-success">@c.Credits ЕКТС</span>
                                </td>
                                <td class="align-middle">@c.Semester</td>
                                <td class="align-middle">@c.Programme</td>
                                <td class="align-middle">
                                    <span class="badge bg-info">@c.EducationLevel</span>
                                </td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-sm btn-primary shadow-sm"
                                       asp-action="Course"
                                       asp-route-id="@c.Id">
                                        <i class="bi bi-people me-1"></i>Студенти
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .table th {
        font-weight: 600;
        color: #495057;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table td {
        vertical-align: middle;
        padding: 1rem 0.75rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }

    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .btn-primary {
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(13, 110, 253, 0.3) !important;
        }
</style>